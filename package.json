{
  "name": "skeet-worker",
  "version": "0.0.1",
  "description": "Skeet Worker Boilerplate - TypeScript Express Simple Worker Server",
  "main": "dist/index.js",
  "repository": "https://github.com/elsoul/skeet-worker.git",
  "author": "POPPIN-FUMI",
  "private": true,
  "scripts": {
    "docker:build": "docker build . -t skeet-worker",
    "docker:run": "docker run -d -p 4000:4000 --name skeet-worker skeet-worker",
    "docker:rm": "docker rm -f skeet-worker",
    "update:packages": "ncu -u && yarn",
    "build": "tsc",
    "publish": "npm publish",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "dotenv": "16.0.3",
    "express": "4.18.2"
  },
  "devDependencies": {
    "@types/express": "4.17.14",
    "@types/node": "18.11.9",
    "nodemon": "2.0.20",
    "typescript": "4.9.3"
  }
}
